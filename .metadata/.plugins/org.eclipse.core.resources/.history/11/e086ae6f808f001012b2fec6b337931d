package com.nt.sbeans;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Component;

@Component("cktr")
public class Cricketer {	
	
	public Cricketer(ICricketBat bat) {
			System.out.println("Cricketer::0param constructor");
	}

			@Autowired
			@Qualifier("ssBat")
			private ICricketBat bat;
			@Autowired
			@Qualifier("oxBall")
			private ICricketBall ball;
			
			public String batting(String name) {
				int score  = bat.scoreRuns();
				return name+" Batsman score is "+score;
			}
			
			public String ball(String name) {
				String bowlingScore = ball.bowling();
				return name+" Bowler statistics are::"+bowlingScore;
			}
			
}
